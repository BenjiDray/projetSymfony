{% extends "base.html.twig" %}
{% block body %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

<h1>
{% if editButton %}
modifier un article
{% else %}
    creation d'un article
{% endif %}

</h1>

{{form_start(formArticle)}}

{{form_row(formArticle.title,{'attr':{'placeholder':"mettre un titre"}})}}
{{form_row(formArticle.content,{'attr':{'placeholder':"mettre un contenue"}})}}
{{form_row(formArticle.image)}}
{{form_row(formArticle.category)}}


